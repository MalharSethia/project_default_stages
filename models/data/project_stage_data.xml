            <field name="fold">False</field>
        </record>
        
        <record id="project_stage_uat" model="project.task.type">
            <field name="name">UAT</field>
            <field name="sequence">7</field>
            <field name="fold">False</field>
        </record>
        
        <record id="project_stage_done" model="project.task.type">
            <field name="name">DONE</field>
            <field name="sequence">8</field>
            <field name="fold">True</field>
        </record>
    </data>
</odoo>
